{
  "name": "lovely-todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^6.2.0",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^5.1.1",
    "react-redux-firebase": "^2.2.6",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "redux": "^4.0.1",
    "redux-firestore": "^0.8.0",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "build:css": "postcss src/tailwind.css -o src/assets/css/index.css",
    "watch:css": "postcss src/tailwind.css -o src/assets/css/index.css -w",
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all build:css build:react",
    "start:react": "react-scripts start",
    "build:react": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "eslint-plugin-prettier": "^3.1.0",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.17.1",
    "stylelint-config-recommended": "^2.2.0",
    "tailwindcss": "^1.0.3"
  }
}
